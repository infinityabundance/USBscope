pkgname=usbscope
pkgver=0.1.0
pkgrel=1
pkgdesc="USBscope daemon, UI, and tray"
arch=('x86_64')
license=('MIT')
depends=('qt6-base' 'libudev' 'systemd')
makedepends=('cmake' 'ninja')
source=()
sha256sums=()

build() {
  cmake -S . -B build -G Ninja -DCMAKE_INSTALL_PREFIX=/usr
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build

  install -Dm644 data/usbscoped.service \
    "$pkgdir/usr/lib/systemd/system/usbscoped.service"
  install -Dm644 data/org.cachyos.USBscope1.xml \
    "$pkgdir/usr/share/dbus-1/interfaces/org.cachyos.USBscope1.xml"
  install -Dm644 data/usbscope-ui.desktop \
    "$pkgdir/usr/share/applications/usbscope-ui.desktop"
  install -Dm644 data/icons/usbscope.svg \
    "$pkgdir/usr/share/icons/hicolor/scalable/apps/usbscope.svg"
}
